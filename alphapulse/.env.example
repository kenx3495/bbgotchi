# AlphaPulse Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# REQUIRED: API Keys
# ===========================================

# Helius API (get from https://helius.dev)
HELIUS_API_KEY=your_helius_api_key_here

# Telegram Bot (get from @BotFather)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_chat_or_channel_id
TELEGRAM_ADMIN_IDS=123456789,987654321

# ===========================================
# Database
# ===========================================
DATABASE_URL=sqlite:///alphapulse.db
# For PostgreSQL: postgresql://user:pass@localhost/alphapulse

# ===========================================
# Smart Wallet Thresholds
# ===========================================
MIN_WIN_RATE=65.0
MIN_TRADES_7D=10

# ===========================================
# Signal Trigger Thresholds
# ===========================================

# High Conviction Buy
HIGH_CONVICTION_MIN_SOL=1.0
HIGH_CONVICTION_MIN_SUPPLY_PCT=0.5

# Cluster Detection
CLUSTER_MIN_WALLETS=2
CLUSTER_WINDOW_MINUTES=5
CLUSTER_MIN_SOL=0.5

# Volume Spike (for new tokens)
VOLUME_SPIKE_THRESHOLD=0.1
NEW_TOKEN_MAX_AGE_MINUTES=60

# ===========================================
# Scraping Settings
# ===========================================
SCRAPE_INTERVAL_MINUTES=60
SCRAPE_HEADLESS=true
TRENDING_TOKEN_LIMIT=20
MIN_TOKEN_GROWTH_PCT=500.0

# ===========================================
# Trading Bot Links (for 1-click execution)
# ===========================================
TROJAN_BOT_LINK=https://t.me/solaborator_trojan_trading_bot
MAESTRO_BOT_LINK=https://t.me/MaestroSniperBot

# ===========================================
# Logging
# ===========================================
LOG_LEVEL=INFO
